<%#
  gulpfileから渡される変数
    - ROOT (ドキュメントルート)
    - meta (headタグのmeta情報)
%>

<% meta = meta %>
<% cssPath = `${ROOT}/assets/css` %>
<% jsPath = `${ROOT}/assets/js` %>
<% imgPath = `${ROOT}/assets/img` %>

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
      <%= `${meta.title[fileName]}${fileName === 'index' ? '' : meta.title.suffix}` %>
    </title>
    <meta name="description" content="<%= meta.description %>">
    <meta name="keywords" content="<%= meta.keywords %>">
    <meta property="og:locale" content="ja_JP">
    <meta
      property="og:title"
      <%= `${meta.title[fileName]}${fileName === 'index' ? '' : meta.title.suffix}` %>
    >
    <meta property="og:description" content="<%= meta.description %>">
    <meta property="og:type" content="<%= meta.og_type %>">
    <meta property="og:url" content="<%= meta.og_url %>">
    <meta property="og:site_name" content="<%= meta.og_site_name %>">
    <meta property="og:image" content="<%= meta.og_image %>">
    <meta property="og:image:width" content="<%= meta.og_image_width %>">
    <meta property="og:image:height" content="<%= meta.og_image_height %>">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP&display=swap" rel="stylesheet">
    <%- typeof link !== 'undefined' ? link(__append) : null %>
  </head>
  <body>
    <div class="l-wrap">
      <div class="p-logo">
        <img src="<%= `${imgPath}/img_logo_character.svg` %>" alt="BanaBoardのロゴ">
      </div>

      <main class="l-container">
        <%- typeof container !== 'undefined' ? container(__append) : null %>
      </main>

      <%- include('../includes/footer') %>
    </div>

    <%- typeof script !== 'undefined' ? script(__append) : null %>
  </body>
</html>
